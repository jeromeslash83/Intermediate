from turtle import Turtle, Screen
import turtle as tu
import random

t = Turtle()
tu.colormode(255)
t.speed(0)

def random_color():
    r = random.choice(range(1, 255))
    g = random.choice(range(1, 255))
    b = random.choice(range(1, 255))
    return (r, g, b)


for angle in range(0, 360, 3):
    t.setheading(angle)
    t.pencolor(random_color())
    t.circle(100)
